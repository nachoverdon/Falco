{
    "haxe.configurations": [ // one or more configurations for the haxe completion server
        [
            "-cp", "source",

            "-lib", "falco",

            "-lib", "lime",

            "-lib", "openfl",

            "-lib", "starling",

            "-neko", "falco.n",

            "--no-output",
        ] // a configuration is array of arguments passed to the completion server
    ],
    "haxe.displayServer": { // configuration for starting haxe completion server itself
        "arguments": [
            "-v"
        ], // arguments before --wait (-v is useful for debugging)
    },
    "codedox": {
        "commentdescription": "\n",
        "paramFormat": "@param   ${name} ",
        "returnFormat": "@return  ${type}",
        "commentend": "**/"
    },
    "[haxe]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "editor.tabSize": 4,
    },
}